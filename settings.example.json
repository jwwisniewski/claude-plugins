{
  "env": {
    "CONTEXT_REMINDER_MAX_TOKENS": "200000",
    "CONTEXT_REMINDER_THRESHOLD": "0.95"
  },
  "hooks": {
    "PostToolUse": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/context-reminder.py",
            "timeout": 30
          }
        ]
      }
    ]
  }
}
